<div class="container">
  <div>
    <h1>New tasks</h1>
  </div>

  <div>
    <%= form_with model: @task do |f| %>
      <div>
        <%= f.label :Title %>
      <div>
      <div>
        <%= f.text_field :title, class: "form-control mt-3"%>
      </div>

      <div>
        <%= f.label :Details, class: "mt-3"%>
      </div>
      <div>
        <%= f.text_field :details, class: "form-control mt-3" %>
      </div>

      <div class= "mt-3">
        <%= f.submit, class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>

  <div>
    <a href="<%= tasks_path %>" class="text-decoration-none mt-3">
      Back to the list
    </a>
  </div>

</div>
